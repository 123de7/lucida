<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mobile.sirius" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <feature name="Camera">
        <param name="firefoxos-package" value="Camera" />
    </feature>
    <feature name="Notification">
        <param name="firefoxos-package" value="Notification" />
    </feature>
    <permission name="systemXHR" privileged="true" />
    <feature name="Device">
        <param name="firefoxos-package" value="Device" />
    </feature>
    <name>SiriusMobile</name>
    <description>
    </description>
    <author email="claritylab.umich@gmail.com" href="http://sirius.clarity-lab.org/">
        Clarity Lab Sirius Project
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
