<!--
  *** General training configuration ***
  Remark: 
  Scorer and scorer configuration are defined in the config file
-->
    <max-leaves> 501 </max-leaves>

   
<!--
  *** Create a single silence cluster ***
-->
    <step name="silence" action="cluster">
      <questions>
        <question>
          <key> central </key>
          <value> si </value>
        </question>
      </questions>
    </step>

<!--
  *** Partition examples w.r.t to central phoneme ***
-->
    <step name="central" action="partition">
      <min-obs> 10 </min-obs>
      <questions>
        <for-each-value>
          <question description="central-phone">
            <key> central </key>
          </question>
        </for-each-value>
      </questions>
    </step>

<!--
  *** Partition examples w.r.t to hmm state ***
-->
    <step name="hmm-state" action="partition">
      <min-obs> 10 </min-obs>
      <questions>
        <for-each-value>
          <question description="hmm-state">
            <key> hmm-state </key>
          </question>
        </for-each-value>
      </questions>
    </step>

<!--
  *** Split nodes until stop criterion is reached ***
-->
    <step name="linguistics">
      <min-obs> 10 </min-obs>
      <!-- <min-gain> 1.0 </min-gain>  -->
      <!-- <randomize nQuestions="5"/> -->
      <questions>
        <for-each-value>
          <question description="boundary">
             <key> boundary </key>
          </question>
        </for-each-value>
        <for-each-key keys="history[0] future[0]">
          <for-each-value>
            <question description="context-phone"/>
          </for-each-value>
          <question description="Vocal">
            <values> AH EY AE AA IY EH AO OW IH ER UW AY AW </values>
          </question>
          <!-- add more phonetic questions -->
        </for-each-key>
      </questions> 
    </step>
</decision-tree-training>

