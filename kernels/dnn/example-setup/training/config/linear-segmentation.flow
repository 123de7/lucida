<?xml version="1.0" encoding="UTF-8"?>
<network>
  <out name="features"/>
  <out name="alignments"/>

  <param name="input-file"/>
  <param name="start-time"/>
  <param name="end-time"/>
  <param name="track"/>

  <param name="id"/>    
  <param name="orthography"/>


  <node name="samples" filter="shared/samples.flow"
        input-file="$(input-file)"
        start-time="$(start-time)" end-time="$(end-time)" track="$(track)"/>

  <node name="base-feature-extraction" filter="$(file)"
        ignore-unknown-parameters="true"
        input-file="$(input-file)" id="$(id)" 
        start-time="$(start-time)" end-time="$(end-time)" track="$(track)"/>
  <link from="base-feature-extraction:features" to="network:features"/>

  <node name="alignment" filter="speech-linear-segmentation"
        id="$(id)" orthography="$(orthography)"/>
  <link from="base-feature-extraction:energies" to="alignment"/>
  <link from="alignment" to="network:alignments"/>
</network>

