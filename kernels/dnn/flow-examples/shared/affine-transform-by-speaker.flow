<network>
  <in name="in"/>
  <out name="out"/>

  <param name="transforms"/>
  <param name="speaker"/>

  <node name="extend" filter="signal-vector-f32-resize"
      new-discrete-size="1" initial-value="1.0"
      relative-change="true" change-front="true"/>
  <link from="network:in" to="extend"/>

  <node name="multiplication" filter="signal-matrix-multiplication-f32"
      file="$(transforms)/$(speaker).matrix"/>
  <link from="extend" to="multiplication"/>

  <link from="multiplication" to="network:out"/>
</network>
