<network>
  <out name="features"/>

  <param name="id"/>

  <param name="input-file"/>
  <param name="start-time"/>
  <param name="end-time"/>
  <param name="track"/>
  <param name="map-file"/>

  <param name="speaker"/>

  <node name="base-feature-extraction-cache" filter="generic-cache" 
	id="$(id)"/>

  <node name="lda" filter="lda.flow"/>
  <link from="base-feature-extraction-cache" to="lda:in"/>

  <node name="segment-clustering" filter="generic-coprus-key-map" key="$(id)"
        map-file="$(map-file)"
        start-time="$(start-time)" end-time="$(end-time)"/>

  <node name="affine-transform" filter="affine-transform.flow" />
  <link from="lda:out" to="affine-transform:in"/>
  <link from="segment-clustering" to="affine-transform:corpus-key"/>

  <link from="affine-transform:out" to="network:features"/>
</network>
